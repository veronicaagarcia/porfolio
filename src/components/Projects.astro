---
import { Image } from 'astro:assets';
import { projects } from '../data/projects';
import type { Project } from '../types/index';
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  {
    projects.map((item: Project) => (
      <article class="group backdrop-blur-lg w-full h-auto mx-auto border border-secondary-light/50 dark:border-secondary-dark/50 rounded-2xl bg-background-light/80 dark:bg-background-dark/80 transition-all duration-700 ease-out overflow-hidden hover:shadow-2xl hover:shadow-primary-light/20 dark:hover:shadow-primary-dark/20 hover:-translate-y-3 hover:scale-[1.02] hover:border-accent-light/60 dark:hover:border-accent-dark/60 hover:bg-background-light/90 dark:hover:bg-background-dark/90 cursor-pointer">
        <div class="relative overflow-hidden rounded-t-2xl">
          <Image
            class="w-full h-48 md:h-56 object-cover transition-all duration-500 ease-in-out group-hover:scale-110"
            src={item.image}
            alt={`Captura de pantalla del proyecto ${item.title}`}
            width={400}
            height={300}
            loading="lazy"
            format="webp"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-700 ease-out" />
          <div class="absolute bottom-4 left-4 right-4 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
            <div class="flex gap-2 flex-wrap">
              {item.tags.slice(0, 3).map((tag) => (
                <span class="px-3 py-1.5 text-xs font-semibold bg-white/30 backdrop-blur-md rounded-full text-white border border-white/40 shadow-lg hover:bg-white/40 transition-all duration-300">
                  {tag}
                </span>
              ))}
              {item.tags.length > 3 && (
                <span class="px-3 py-1.5 text-xs font-semibold bg-accent-light/80 dark:bg-accent-dark/80 backdrop-blur-md rounded-full text-white border border-white/40 shadow-lg">
                  +{item.tags.length - 3} más
                </span>
              )}
            </div>
          </div>
        </div>

        <div class="p-6">
          <h3 class="text-lg md:text-xl font-bold text-primary-light dark:text-primary-dark mb-3 line-clamp-2 group-hover:text-accent-light dark:group-hover:text-accent-dark transition-colors duration-300">
            {item.title}
          </h3>

          <p class="text-sm text-text-light dark:text-text-dark mb-4 leading-relaxed line-clamp-3 group-hover:line-clamp-none transition-all duration-300">
            {item.description}
          </p>

          {item.colaboration && (
            <p class="text-xs text-text-light/80 dark:text-text-dark/80 mb-4">
              <span class="font-medium">Colaboración con:</span>{' '}
              <a
                href={item.colaborationLink}
                target="_blank"
                rel="noopener noreferrer"
                class="text-primary-light dark:text-primary-dark font-medium hover:text-accent-light dark:hover:text-accent-dark transition-colors duration-300"
              >
                {item.colaboration}
              </a>
            </p>
          )}

          {/* Mostrar todas las tags en desktop */}
          <div class="hidden md:flex flex-wrap gap-2 mb-6">
            {item.tags.map((tag) => (
              <span class="px-2 py-1 text-xs font-medium bg-secondary-light/50 dark:bg-secondary-dark/50 rounded-lg text-text-light dark:text-text-dark">
                {tag}
              </span>
            ))}
          </div>

          <div class="flex gap-3 mt-auto">
            <a
              href={item.link}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-1 text-center bg-primary-light dark:bg-primary-dark text-white text-sm font-medium px-4 py-2.5 rounded-xl hover:bg-accent-light dark:hover:bg-accent-dark transition-all duration-300 hover:shadow-lg hover:shadow-primary-light/25 dark:hover:shadow-primary-dark/25"
            >
              Ver proyecto
            </a>
            <a
              href={item.github}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-1 text-center border-2 border-primary-light dark:border-primary-dark text-primary-light dark:text-primary-dark text-sm font-medium px-4 py-2.5 rounded-xl hover:bg-primary-light dark:hover:bg-primary-dark hover:text-white dark:hover:text-black transition-all duration-300"
            >
              Ver código
            </a>
          </div>
        </div>
      </article>
    ))
  }
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-none {
    display: block;
    -webkit-line-clamp: unset;
    -webkit-box-orient: unset;
    overflow: visible;
  }
</style>
